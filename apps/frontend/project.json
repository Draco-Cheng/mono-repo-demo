{
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/frontend && npm run build"
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/frontend && npm run dev"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/frontend && npm run test"
            }
        },
        "test:watch": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/frontend && npm run test:watch"
            }
        },
        "test:coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd apps/frontend && npm run test:coverage"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    {
                        "command": "docker build -t $DOCKER_USERNAME/$REPO_NAME/frontend:$BRANCH_NAME .",
                        "forwardAllArgs": false
                    },
                    {
                        "command": "docker push $DOCKER_USERNAME/$REPO_NAME/frontend:$BRANCH_NAME",
                        "forwardAllArgs": false
                    }
                ],
                "cwd": "apps/frontend"
            },
            "dependsOn": ["build"]
        }
    }
}